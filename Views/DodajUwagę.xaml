<UserControl x:Class="AplikacjaDostepowa.Views.DodajUwagę"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AplikacjaDostepowa.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,16,0,0">Uczeń</TextBlock>
        <ComboBox ItemsSource="{Binding Uczniowie, Mode=OneWay}" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="74,10,10,0" Name="Uczen"/>
        <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10,39,0,0">Treść</TextBlock>
        <TextBox VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="74,37,10,0" Name="Tresc"/>
        <Button Margin="0,60,0,0" Height="27" VerticalAlignment="Top" HorizontalAlignment="Center" Width="44" Click="Button_Click">Zapisz</Button>
    </Grid>
</UserControl>
