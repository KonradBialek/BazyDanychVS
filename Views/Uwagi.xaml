<UserControl x:Class="AplikacjaDostepowa.Views.Uwagi"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AplikacjaDostepowa"
             mc:Ignorable="d" 
             xmlns:s="clr-namespace:System;assembly=mscorlib"
             d:DesignHeight="450" d:DesignWidth="700">
    <Grid Background="White">
        <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0" Grid.Column="1" Text="Uwagi " TextWrapping="Wrap" VerticalAlignment="Top"/>
        <DataGrid Margin="10,31,10,10" Name="dataGrid1" ItemsControl.ItemsSource="{Binding Data, Mode = OneWay}" CanUserAddRows="False" CanUserDeleteRows="False"/>
        <Button Content="Dodaj" HorizontalAlignment="Left" Margin="10,6,0,0" VerticalAlignment="Top" Width="75" Name="DodajButton" Click="Button_Click"/>
    </Grid>
</UserControl>
